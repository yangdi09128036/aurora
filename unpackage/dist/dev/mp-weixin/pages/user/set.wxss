.container {
  padding: 100rpx 40rpx 60rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}
.nav-back {
  position: fixed;
  left: 30rpx;
  top: 60rpx;
  padding: 10rpx;
  z-index: 10;
}
.back-icon {
  width: 60rpx;
  height: 60rpx;
}
.form-content {
  margin-top: 50rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}
.form-item {
  display: flex;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #eee;
}
.form-item:last-child {
  border-bottom: none;
}
.form-item .label {
  font-size: 30rpx;
  color: #333;
  width: 160rpx;
  flex-shrink: 0;
}
.form-item .input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
  padding: 0 20rpx;
}
.form-item .textarea {
  flex: 1;
  height: 150rpx;
  font-size: 30rpx;
  color: #333;
  padding: 20rpx;
  line-height: 1.5;
}
.save-btn {
  margin-top: 60rpx;
  background: #007AFF;
  color: #fff;
  font-size: 34rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 122, 255, 0.2);
  transition: all 0.2s;
}
.save-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
.logout-btn {
  margin-top: 40rpx;
  text-align: center;
  color: #ff3b30;
  font-size: 32rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  background: #fff;
  transition: background-color 0.2s;
}
.logout-btn:active {
  background-color: rgba(255, 59, 48, 0.1);
}

/* 输入框placeholder样式 */
input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
  color: #999;
  opacity: 0.8;
}