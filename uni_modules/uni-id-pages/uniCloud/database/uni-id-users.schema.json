{
	"bsonType": "object",
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（用户 ID），系统自动生成"
		},
		"username": {
			"bsonType": "string",
			"description": "用户名，不允许重复",
			"title": "用户名",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"password": {
			"bsonType": "password",
			"description": "密码，加密存储",
			"title": "密码",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"nickname": {
			"bsonType": "string",
			"description": "用户昵称",
			"title": "昵称",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"mobile": {
			"bsonType": "string",
			"description": "手机号码",
			"pattern": "^\\+?[0-9-]{3,20}$",
			"title": "手机号码",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"gender": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "用户性别：0 未知 1 男性 2 女性",
			"enum": [{
				"text": "未知",
				"value": 0
			}, {
				"text": "男",
				"value": 1
			}, {
				"text": "女",
				"value": 2
			}],
			"title": "性别",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"email": {
			"bsonType": "string",
			"description": "邮箱地址",
			"format": "email",
			"title": "邮箱",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"address": {
			"bsonType": "string",
			"description": "收货地址",
			"title": "收货地址",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"last_login_ip": {
			"bsonType": "string",
			"description": "最后登录时 IP 地址",
			"title": "最后登录 IP",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"token": {
			"bsonType": "array",
			"description": "用户 token",
			"title": "用户 Token",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"avatar": {
			"bsonType": "string",
			"description": "头像地址",
			"title": "头像地址",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"avatar_file": {
			"bsonType": "file",
			"description": "用 file 类型方便使用 uni-file-picker 组件",
			"title": "头像文件",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"comment": {
			"bsonType": "string",
			"description": "备注",
			"title": "备注",
			"trim": "both",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"dcloud_appid": {
			"bsonType": "array",
			"description": "允许登录的客户端的 appid 列表",
			"foreignKey": "opendb-app-list.appid",
			"title": "允许登录的 appid",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"email_confirmed": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "邮箱验证状态：0 未验证 1 已验证",
			"enum": [{
				"text": "未验证",
				"value": 0
			}, {
				"text": "已验证",
				"value": 1
			}],
			"title": "邮箱验证状态",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"last_login_date": {
			"bsonType": "timestamp",
			"description": "最后登录时间",
			"title": "最后登录时间",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"mobile_confirmed": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "手机号验证状态：0 未验证 1 已验证",
			"enum": [{
				"text": "未验证",
				"value": 0
			}, {
				"text": "已验证",
				"value": 1
			}],
			"title": "手机号验证状态",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"password_secret_version": {
			"bsonType": "int",
			"description": "密码使用的 passwordSecret 版本",
			"title": "密码密钥版本",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"register_date": {
			"bsonType": "timestamp",
			"description": "注册时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"title": "注册时间",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"register_ip": {
			"bsonType": "string",
			"description": "注册时 IP 地址",
			"forceDefaultValue": {
				"$env": "clientIP"
			},
			"title": "注册 IP",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"role": {
			"bsonType": "array",
			"description": "用户角色",
			"enum": {
				"collection": "uni-id-roles",
				"field": "role_id as value, role_name as text"
			},
			"foreignKey": "uni-id-roles.role_id",
			"title": "角色",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"tags": {
			"bsonType": "array",
			"description": "用户标签",
			"title": "标签",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"score": {
			"bsonType": "int",
			"description": "用户积分，积分变更记录可参考：uni-id-scores 表定义",
			"title": "用户积分",
			"permission": {
				"read": true,
				"write": true
			}
		},
		"status": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "用户状态：0 正常 1 禁用 2 审核中 3 审核拒绝",
			"enum": [{
				"text": "正常",
				"value": 0
			}, {
				"text": "禁用",
				"value": 1
			}, {
				"text": "审核中",
				"value": 2
			}, {
				"text": "审核拒绝",
				"value": 3
			}],
			"title": "用户状态",
			"permission": {
				"read": true,
				"write": true
			}
		}
	},
	"required": []
}